<UserControl x:Class="APLPX.UI.WPF.AnalyticValueDriversStepControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:converters="clr-namespace:APLPX.UI.WPF.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:APLPX.UI.WPF.Helpers"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <CollectionViewSource x:Key="cvsDrivers" Source="{Binding Path=Entity.ValueDrivers}">
                <CollectionViewSource.SortDescriptions>
                    <scm:SortDescription Direction="Ascending" PropertyName="Sort" />
                </CollectionViewSource.SortDescriptions>
            </CollectionViewSource>

            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />

            <SolidColorBrush x:Key="editableTextBackground" Color="LightBlue"/>
            <SolidColorBrush x:Key="editableTextForeground" Color="Black"/>
            
            <!--  TODO: move this to common styles. Intended for use with titles of list boxes, data grids. etc.  -->
            <Style x:Key="ListTitleTextStyle" TargetType="TextBlock">
                <Setter Property="TextAlignment" Value="Center" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Margin" Value="5" />
            </Style>

            <Style x:Key="EditTextBoxStyle"
                   BasedOn="{StaticResource TextBoxStyle1}"
                   TargetType="TextBox">
                <Setter Property="Width" Value="55" />
                <Setter Property="Height" Value="23" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="helpers:TextBoxHelper.SelectAllTextOnFocus" Value="True" />
            </Style>

            <ResourceDictionary.MergedDictionaries>
                <!--  for design-time support, already in app.xml  -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/VS/Colors.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/VS/Styles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/FlatButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation x:Name="fadeIn"
                                     Duration="0:0:1"
                                     From="0"
                                     Storyboard.TargetProperty="(UIElement.Opacity)"
                                     To="1" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>


    <Grid x:Name="LayoutRoot" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Style="{StaticResource ListTitleTextStyle}"
                   Text="Value Drivers" />

        <TextBlock Grid.Row="0"
                   Grid.Column="1"
                   Style="{StaticResource ListTitleTextStyle}"
                   Text="Modes"
                   Visibility="Collapsed" />

        <TextBlock Grid.Row="0"
                   Grid.Column="2"
                   Style="{StaticResource ListTitleTextStyle}"
                   Text="Driver Groups"
                   Visibility="{Binding ElementName=DriveGroupConfigurationGrid,
                                        Path=Visibility}" />

        <ListBox x:Name="DriversListBox"
                 Grid.Row="1"
                 Grid.RowSpan="2"
                 Grid.Column="0"
                 Margin="20, 0"
                 ItemsSource="{Binding Path=Entity.ValueDrivers}"
                 SelectedItem="{Binding Path=Entity.SelectedValueDriver}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding Path=IsSelected}" />
                        <Label Content="{Binding Path=Name}"
                               FontSize="16"
                               Foreground="{StaticResource Foreground}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox x:Name="DriverModesListBox"
                 Grid.Row="1"
                 Grid.RowSpan="2"
                 Grid.Column="1"
                 ItemsSource="{Binding ElementName=DriversListBox,
                                       Path=SelectedItem.Modes}"
                 SelectedItem="{Binding Path=Entity.SelectedValueDriver.SelectedMode}"
                 Visibility="Collapsed">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding Path=IsSelected}" />
                        <Label Content="{Binding Path=Name}"
                               FontSize="16"
                               Foreground="{StaticResource Foreground}" />

                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid x:Name="DriveGroupConfigurationGrid"
              Grid.Row="1"
              Grid.Column="2"
              Margin="20,0"
              DataContext="{Binding Path=Entity.SelectedValueDriver.Mode}"
              Visibility="{Binding ElementName=LayoutRoot,
                                   Path=DataContext.IsValueDriverSelected,
                                   Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0"
                   Grid.Column="0"
                   Content="No. of Groups:"
                   FontSize="16"
                   Foreground="{StaticResource Foreground}" />

            <controls:NumericUpDown x:Name="GroupCountUpDown"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="5"
                                    HorizontalAlignment="Left"
                                    Background="DarkGray"
                                    Foreground="{StaticResource Foreground}"
                                    IsReadOnly="True"
                                    Maximum="15"
                                    Minimum="1"
                                    Value="{Binding Path=GroupCount}" />

            <StackPanel x:Name="ModeSelectionPanel"
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Orientation="Horizontal">
                <RadioButton x:Name="rdoIsAuto"
                             Margin="5"
                             VerticalAlignment="Center"
                             Content="Auto Generated"
                             IsChecked="{Binding Path=IsAutoGenerated}" />

                <RadioButton x:Name="rdoIsManual"
                             Margin="10,5"
                             VerticalAlignment="Center"
                             Content="User Defined"
                             IsChecked="{Binding ElementName=rdoIsAuto,
                                                 Path=IsChecked,
                                                 Converter={StaticResource InverseBooleanConverter}}" />
            </StackPanel>

            <Grid x:Name="DriverGroupRangeGrid"
                  Grid.Row="1"
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Visibility="Collapsed">
                <!--
                    Visibility="{Binding ElementName=DriverModesListBox,
                    Path=SelectedItem.IsAutoGenerated,
                    Converter={StaticResource BooleanToVisibilityConverter}}"
                -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       Content="_Lower:"
                       FontSize="16"
                       Foreground="{StaticResource Foreground}"
                       Target="{Binding ElementName=txtRangeMin}" />
                <TextBox x:Name="txtRangeMin"
                         Grid.Column="1"
                         Grid.ColumnSpan="2"
                         Margin="5,4"
                         Style="{StaticResource EditTextBoxStyle}"
                         Text="{Binding Path=LowerLimit}" />

                <Label Grid.Column="3"
                       Content="_Upper:"
                       FontSize="16"
                       Foreground="{StaticResource Foreground}"
                       Target="{Binding ElementName=txtRangeMax}" />

                <TextBox x:Name="txtRangeMax"
                         Grid.Column="4"
                         Margin="5,4"
                         Style="{StaticResource EditTextBoxStyle}"
                         Text="{Binding Path=UpperLimit}" />
            </Grid>

        </Grid>

        <MenuItem Grid.Row="1"
                  Grid.Column="3"
                  VerticalAlignment="Top"
                  Margin="15,5,0,0"
                  Background="DarkGray"
                  Command="{Binding ElementName=LayoutRoot,
                                    Path=DataContext.AutoCalculateCommand}"
                  FontSize="16"
                  Foreground="Blue"
                  Header="Run"
                  Style="{x:Null}"
                  ToolTip="Automatically calculate the groups for this value driver."
                  Visibility="{Binding ElementName=DriveGroupConfigurationGrid,
                                       Path=Visibility}" />

        <DataGrid x:Name="DriverGroupsDataGrid"
                  Grid.Row="2"
                  Grid.Column="2"
                  VerticalAlignment="Top"
                  AutoGenerateColumns="False"
                  BeginningEdit="DriverGroupsDataGrid_BeginningEdit"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  ItemsSource="{Binding Path=Entity.SelectedValueDriver.Mode.Groups}"
                  Visibility="{Binding Path=IsValueDriverSelected,
                                       Converter={StaticResource BooleanToVisibilityConverter}}">
            <DataGrid.Resources>
                <Style x:Key="GroupMinElementStyle" TargetType="TextBlock">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=IsMinValueEditable}" Value="True">
                            <Setter Property="Background" Value="{StaticResource editableTextBackground}" />
                            <Setter Property="Foreground" Value="{StaticResource editableTextForeground}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
                <Style x:Key="GroupMaxElementStyle" TargetType="TextBlock">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=IsMaxValueEditable}" Value="True">
                            <Setter Property="Background" Value="{StaticResource editableTextBackground}" />
                            <Setter Property="Foreground" Value="{StaticResource editableTextForeground}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
                <Style x:Key="GroupMinEditingElementStyle"
                       BasedOn="{StaticResource EditTextBoxStyle}"
                       TargetType="TextBox">
                    <Setter Property="IsEnabled" Value="{Binding Path=IsMinValueEditable}" />
                </Style>
                <Style x:Key="GroupMaxEditingElementStyle"
                       BasedOn="{StaticResource EditTextBoxStyle}"
                       TargetType="TextBox">
                    <Setter Property="IsEnabled" Value="{Binding Path=IsMaxValueEditable}" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="colGroup"
                                    Binding="{Binding Path=Value}"
                                    Header="Group" />

                <DataGridTextColumn x:Name="colLower"
                                    Binding="{Binding Path=MinOutlier}"
                                    EditingElementStyle="{StaticResource GroupMinEditingElementStyle}"
                                    ElementStyle="{StaticResource GroupMinElementStyle}"
                                    Header="Lower Limit" />

                <DataGridTextColumn x:Name="colUpper"
                                    Binding="{Binding Path=MaxOutlier}"
                                    EditingElementStyle="{StaticResource GroupMaxEditingElementStyle}"
                                    ElementStyle="{StaticResource GroupMaxElementStyle}"
                                    Header="Upper Limit" />
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid x:Name="DriverGroupsDataGrid0"
                  Grid.Row="2"
                  Grid.Column="2"
                  Height="500"
                  VerticalAlignment="Top"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  ItemsSource="{Binding ElementName=DriverModesListBox,
                                        Path=SelectedItem.Groups}"
                  Visibility="Collapsed">
            <!--
                Visibility="{Binding ElementName=DriverModesListBox,
                Path=SelectedItem.IsAutoGenerated,
                Converter={StaticResource InverseBooleanToVisibilityConverter}}"
            -->
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Value}" Header="Group" />
                <DataGridTextColumn Binding="{Binding Path=MinOutlier}" Header="Lower Limit" />
                <DataGridTextColumn Binding="{Binding Path=MaxOutlier}" Header="Upper Limit" />
            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</UserControl>
