        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>
        <DataGrid x:Name="FilterGrid" ItemsSource="{Binding Source={StaticResource cvsResults}}" Grid.Row="0"
                  AutoGenerateColumns="False" Visibility="Visible">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Driver Name" Binding="{Binding DriverName}" />
                <DataGridTextColumn Header="Group" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Sku Count" Binding="{Binding SkuCount}" />
                <DataGridTextColumn Header="Min Value" Binding="{Binding MinValue}" />
                <DataGridTextColumn Header="Max Value" Binding="{Binding MaxValue}" />
                <DataGridTextColumn Header="Sales Value" Binding="{Binding SalesValue}" />
                

            </DataGrid.Columns>
            <DataGrid.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        
                        
                    <Style TargetType="{x:Type GroupItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type GroupItem}">
                                    <Expander x:Name="exp" IsExpanded="True"
                              Background="Black"
                              Foreground="White">
                                        <Expander.Header>
                                            <Grid>

                                                <TextBlock Text="{Binding Name, StringFormat={}Group {0}}"/>
                                            </Grid>
                                        </Expander.Header>
                                        <ItemsPresenter />
                                    </Expander>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
                
                
            </DataGrid.GroupStyle>
