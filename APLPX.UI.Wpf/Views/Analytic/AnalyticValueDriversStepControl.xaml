<UserControl x:Class="APLPX.UI.WPF.Views.Analytic.AnalyticValueDriversStepControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:converters="clr-namespace:APLPX.UI.WPF.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:APLPX.UI.WPF.Helpers"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <CollectionViewSource x:Key="cvsDrivers" Source="{Binding Path=Entity.ValueDrivers}">
                <CollectionViewSource.SortDescriptions>
                    <scm:SortDescription Direction="Ascending" PropertyName="Sort" />
                </CollectionViewSource.SortDescriptions>
            </CollectionViewSource>

            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />

            <SolidColorBrush x:Key="editableTextBackground" Color="LightBlue" />
            <SolidColorBrush x:Key="editableTextForeground" Color="Black" />

            <Style x:Key="EditTextBoxStyle"
                   BasedOn="{StaticResource TextBoxStyle1}"
                   TargetType="TextBox">
                <Setter Property="Width" Value="55" />
                <Setter Property="Height" Value="23" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="helpers:TextBoxHelper.SelectAllTextOnFocus" Value="True" />
            </Style>

            <ResourceDictionary.MergedDictionaries>
                <!--  for design-time support, already in app.xml  -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/VS/Colors.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/VS/Styles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/FlatButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.Loaded" >
            <BeginStoryboard Storyboard="{StaticResource sbDefaultFadeIn}"/>
        </EventTrigger>
    </UserControl.Triggers>


    <Grid x:Name="LayoutRoot" Background="{DynamicResource MainWindowBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Style="{StaticResource ListTitleTextStyle}"
                   Text="Value Drivers" />

        <TextBlock Grid.Row="0"
                   Grid.Column="1"
                   Style="{StaticResource ListTitleTextStyle}"
                   Text="Modes"
                   Visibility="Collapsed" />

        <TextBlock Grid.Row="0"
                   Grid.Column="2"
                   Style="{StaticResource ListTitleTextStyle}"
                   Text="Driver Groups"
                   Visibility="{Binding Path=IsValueDriverSelected,
                                        Converter={StaticResource BooleanToVisibilityConverter}}" />

        <ListBox x:Name="DriversListBox"
                 Grid.Row="1"
                 Grid.RowSpan="2"
                 Grid.Column="0"
                 ItemsSource="{Binding Path=Entity.ValueDrivers}"
                 SelectedItem="{Binding Path=Entity.SelectedValueDriver}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding Path=IsSelected}" />
                        <Label Width="176"
                               Content="{Binding Path=Name}"
                               FontSize="16"
                               Foreground="{StaticResource Foreground}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Margin" Value="0,2"/>
                    <Style.Resources>                     
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="{DynamicResource ListBoxSelectionColor}" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="{DynamicResource ListBoxSelectionColor}" />
                    </Style.Resources>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource ListBoxSelectionColor}" />
                            <Setter Property="Foreground" Value="{DynamicResource SearchControlListBoxItemTextColor}" />
                        </Trigger>
                        <DataTrigger Binding="{Binding Path=IsDisplayOnly}" Value="True">
                            <Setter Property="IsEnabled" Value="False"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <!--
            <ListBox x:Name="DriverModesListBox0"
            Grid.Row="1"
            Grid.Column="1"
            ItemsSource="{Binding ElementName=DriversListBox,
            Path=SelectedItem.Modes}"
            SelectedItem="{Binding Path=Entity.SelectedValueDriver.SelectedMode}"
            Visibility="{Binding Path=IsValueDriverSelected,
            Converter={StaticResource BooleanToVisibilityConverter}}">
            
            <ListBox.ItemTemplate>
            <DataTemplate>
            <StackPanel Orientation="Horizontal">
            <RadioButton IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" />
            <Label Content="{Binding Path=Name}"
            FontSize="16"
            Foreground="{StaticResource Foreground}" />
            <TextBlock x:Name="txtKey"
            Margin="5"
            VerticalAlignment="Center"
            FontStyle="Italic"
            Foreground="Red"
            Text="{Binding Path=Key}" />
            </StackPanel>
            </DataTemplate>
            </ListBox.ItemTemplate>
            </ListBox>
        -->


        <Grid x:Name="DriveGroupConfigurationGrid"
              Grid.Row="1"
              Grid.Column="2"
              Margin="20,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ListBox x:Name="DriverModesListBox"
                     Grid.Row="0"
                     Grid.Column="0"
                     Grid.ColumnSpan="3"
                     ItemContainerStyle="{x:Null}"
                     ItemsSource="{Binding ElementName=DriversListBox,
                                           Path=SelectedItem.Modes}"
                     SelectedItem="{Binding Path=Entity.SelectedValueDriver.SelectedMode}"
                     Visibility="{Binding Path=IsValueDriverSelected,
                                          Converter={StaticResource BooleanToVisibilityConverter}}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <RadioButton x:Name="rdoSelectedMode"
                                     Content="{Binding Path=Name}"
                                     IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem},
                                                         Path=IsSelected}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>

            <StackPanel x:Name="GroupCountPanel"
                        Grid.Row="1"
                        Orientation="Horizontal"
                        Visibility="{Binding Path=IsValueDriverModeSelected,
                                             Converter={StaticResource BooleanToVisibilityConverter}}">
                <Label Content="No. of Groups:"
                       FontSize="16"
                       Foreground="{StaticResource Foreground}" />

                <controls:NumericUpDown x:Name="GroupCountUpDown"
                                        Margin="5"
                                        HorizontalAlignment="Left"
                                        Background="DarkGray"
                                        Foreground="{StaticResource Foreground}"
                                        IsReadOnly="True"
                                        Maximum="15"
                                        Minimum="1"
                                        Value="{Binding Path=Entity.SelectedValueDriver.SelectedMode.GroupCount}" />
            </StackPanel>
        </Grid>

        <MenuItem x:Name="mnuRun"
                  Grid.Row="1"
                  Grid.Column="3"
                  Margin="15,5,0,0"
                  VerticalAlignment="Top"
                  Background="DarkGray"
                  Command="{Binding ElementName=LayoutRoot,
                                    Path=DataContext.AutoCalculateCommand}"
                  FontSize="16"
                  Foreground="Blue"
                  Header="Run"
                  Style="{x:Null}"
                  ToolTip="Automatically calculate the groups for this value driver." />

        <!--
            Auxiliary element required to forward DataContext to a DataGridColumn (which is not in the main visual tree).
            Note: adapted from http://stackoverflow.com/questions/25504769/wpf-datagridcolumn-visibility
        -->
        <FrameworkElement x:Name="dataContextSource"
                          Grid.Row="2"
                          Visibility="Collapsed" />

        <DataGrid x:Name="DriverGroupsDataGrid"
                  Grid.Row="2"
                  Grid.Column="2"
                  VerticalAlignment="Top"
                  AutoGenerateColumns="False"
                  BeginningEdit="DriverGroupsDataGrid_BeginningEdit"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserSortColumns="False"
                  ItemsSource="{Binding Path=Entity.SelectedValueDriver.SelectedMode.Groups}"
                  Visibility="{Binding Path=IsValueDriverModeSelected,
                                       Converter={StaticResource BooleanToVisibilityConverter}}">
            <DataGrid.Resources>
                <Style x:Key="GroupMinElementStyle" TargetType="TextBlock">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=IsMinValueEditable}" Value="True">
                            <Setter Property="Background" Value="{StaticResource editableTextBackground}" />
                            <Setter Property="Foreground" Value="{StaticResource editableTextForeground}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
                <Style x:Key="GroupMaxElementStyle" TargetType="TextBlock">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=IsMaxValueEditable}" Value="True">
                            <Setter Property="Background" Value="{StaticResource editableTextBackground}" />
                            <Setter Property="Foreground" Value="{StaticResource editableTextForeground}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="colGroup"
                                    Binding="{Binding Path=Value}"
                                    Header="Group" />

                <DataGridTextColumn x:Name="colLower"
                                    Binding="{Binding Path=MinOutlier}"
                                    ElementStyle="{StaticResource GroupMinElementStyle}"
                                    Header="Lower Limit" />

                <DataGridTextColumn x:Name="colUpper"
                                    Binding="{Binding Path=MaxOutlier}"
                                    ElementStyle="{StaticResource GroupMaxElementStyle}"
                                    Header="Upper Limit" />

                <DataGridTextColumn x:Name="colSkuCount"
                                    Binding="{Binding Path=SkuCount}"
                                    Header="Sku Count"
                                    Visibility="{Binding Path=DataContext.Entity.SelectedValueDriver.SelectedMode.AreResultsAvailable,
                                                         Source={x:Reference dataContextSource},
                                                         Converter={StaticResource BooleanToVisibilityConverter}}" />

                <DataGridTextColumn x:Name="colSalesValue"
                                    Binding="{Binding Path=SalesValue}"
                                    Header="Sales Value"
                                    Visibility="{Binding Path=DataContext.Entity.SelectedValueDriver.SelectedMode.AreResultsAvailable,
                                                         Source={x:Reference dataContextSource},
                                                         Converter={StaticResource BooleanToVisibilityConverter}}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
