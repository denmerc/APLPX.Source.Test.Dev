    <Border Width="Auto"
            Height="Auto"
            Margin="0,0,0,600"
            Background="{DynamicResource SearchControlSelectedItemDetailBackgroundColor}"
            BorderBrush="#828790"
            BorderThickness="1"
            CornerRadius="5">

        <Grid Width="1300">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Content="Results Table" Grid.Row="0" HorizontalAlignment="Center" />
            <Grid Width="1300" Grid.Row="1" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal">
                    <Border x:Name="Label1" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Stretch">
                        <TextBlock Text="Current/Existing"/>
                    </Border>
                    <Border x:Name="Label2" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Stretch">
                        <TextBlock Text="Optimization Results"/>
                    </Border>
                </StackPanel>


                <DataGrid Grid.Row="1" AutoGenerateColumns="False" Name="dg" CanUserReorderColumns="False" IsSynchronizedWithCurrentItem="True" LayoutUpdated="LayoutUpdated" Width="1300">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="SKU #" Width="Auto" x:Name="skuColumn" />
                        <DataGridTextColumn Header="Description" Width="Auto" x:Name="descriptionColumn"/>
                        <DataGridTextColumn Header="Price Lists" Width="Auto" x:Name="priceListColumn"/>
                        <DataGridTextColumn Header="Current Price $" Width="Auto" x:Name="currentPriceColumn"/>
                        <DataGridTextColumn Header="Current Mark-Up ($/%)" Width="Auto" x:Name="currentMarkupColumn"/>
                        <DataGridTextColumn Header="Total Value Driver Change $" Width="Auto" x:Name="totalValueDriverColumn"/>
                        <DataGridTextColumn Header="Final Price $" Width="Auto" x:Name="finalPriceColumn"/>
                        <DataGridTextColumn Header="New Mark-Up ($/%)" Width="Auto" x:Name="newMarkupColumn"/>
                        <DataGridTextColumn Header="Edit Type" Width="Auto" x:Name="editTypeColumn"/>
                        <DataGridTextColumn Header="Warning" Width="Auto" x:Name="warningColumn"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Border>

</UserControl>
