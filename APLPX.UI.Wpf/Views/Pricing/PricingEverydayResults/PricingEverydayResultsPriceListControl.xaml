                    </DataGrid>
                </Grid>
            </Grid>
        </Border>
        <StackPanel Grid.Row="0" Grid.Column="0">
            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Style="{StaticResource ListTitleTextStyle}"
                       Text="Select Price Lists" />

            <!-- PREVIOUS LISTBOX REMOVED FOR DEMO 
            <ListBox x:Name="FilterGroupsListBox"
                     Grid.Row="0"
                     Grid.Column="0"
