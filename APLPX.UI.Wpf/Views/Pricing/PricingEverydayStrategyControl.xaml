<UserControl x:Class="APLPX.UI.WPF.Views.Pricing.PricingEverydayStrategyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:APLPX.UI.WPF.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />

            <Style x:Key="ListItemTextStyle" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Foreground" Value="{StaticResource Foreground}" />
            </Style>

        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.Loaded">
            <BeginStoryboard Storyboard="{StaticResource sbDefaultFadeIn}" />
        </EventTrigger>
    </UserControl.Triggers>

    <Grid x:Name="layoutRoot" Background="{DynamicResource MainWindowBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition x:Name="rowSeparator" Height="25" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <TextBlock Grid.Row="2"
                       Grid.Column="0"
                       Margin="10,5"
                       Style="{StaticResource ListTitleTextStyle}"
                       Text="Key Value Driver" />
            <RadioButton x:Name="rdoList"
                         Margin="5"
                         Content="List"
                         IsChecked="True"
                         Visibility="Collapsed" />
            <RadioButton x:Name="rdoCombo"
                         Margin="5"
                         Content="Combo"
                         IsChecked="False"
                         Visibility="Collapsed" />
        </StackPanel>

        <ListBox x:Name="lstKeyDrivers"
                 Grid.Row="1"
                 Grid.Column="0"
                 VerticalAlignment="Top"
                 ItemsSource="{Binding Path=PriceRoutine.ValueDrivers}"
                 SelectedItem="{Binding Path=PriceRoutine.SelectedValueDriver}"
                 Visibility="{Binding ElementName=rdoList,
                                      Path=IsChecked,
                                      Converter={StaticResource BooleanToVisibilityConverter}}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel MinHeight="35"
                               LastChildFill="True"
                               Tag="{Binding ElementName=lstKeyDrivers,
                                             Path=DataContext}">
                        <Image x:Name="imgKey"
                               Width="25"
                               Height="25"
                               Margin="5"
                               DockPanel.Dock="Right"
                               Source="/APLPX.UI.WPF;component/Resources/key-icon.png"
                               ToolTip="This is the Key value driver."
                               Visibility="{Binding Path=IsKey,
                                                    Converter={StaticResource BooleanToVisibilityConverter}}" />

                        <TextBlock x:Name="txtName"
                                   Style="{StaticResource ListItemTextStyle}"
                                   Text="{Binding Path=Name}" />
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ComboBox x:Name="cboKeyDrivers"
                  Grid.Row="1"
                  Grid.Column="0"
                  VerticalAlignment="Top"
                  Background="{StaticResource WhiteBrush}"
                  ItemsSource="{Binding Path=PriceRoutine.ValueDrivers}"
                  SelectedItem="{Binding Path=PriceRoutine.SelectedValueDriver}"
                  Visibility="{Binding ElementName=rdoCombo,
                                       Path=IsChecked,
                                       Converter={StaticResource BooleanToVisibilityConverter}}">
            <ComboBox.Resources>
                <!--
                    Fix for display issue with dropdown arrow.
                    Redefining the brush here causes the implicit style (MetroComboBox)
                    to use this value as the fill for BtnArrow in the control template.
                -->
                <Color x:Key="Gray1">#FFF9F9F9</Color>
                <SolidColorBrush x:Key="GrayBrush1" Color="{StaticResource Gray1}" />
            </ComboBox.Resources>

            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel MinHeight="35"
                               LastChildFill="True"
                               Tag="{Binding ElementName=lstKeyDrivers,
                                             Path=DataContext}">

                        <Image x:Name="imgKey"
                               Width="25"
                               Height="25"
                               Margin="5"
                               DockPanel.Dock="Right"
                               Source="/APLPX.UI.WPF;component/Resources/key-icon.png"
                               ToolTip="This is the Key value driver."
                               Visibility="{Binding Path=IsKey,
                                                    Converter={StaticResource BooleanToVisibilityConverter}}" />

                        <TextBlock x:Name="txtName"
                                   DockPanel.Dock="Left"
                                   Style="{StaticResource ListItemTextStyle}"
                                   Text="{Binding Path=Name}" />
                    </DockPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock Grid.Row="0"
                   Grid.Column="1"
                   Margin="10,5"
                   Style="{StaticResource ListTitleTextStyle}"
                   Text="{Binding Path=PriceRoutine.SelectedValueDriver.Name,
                                  StringFormat={}{0} - Groups}" />

        <ListBox x:Name="lstKeyGroups"
                 Grid.Row="1"
                 Grid.Column="1"
                 ItemsSource="{Binding Path=PriceRoutine.KeyValueDriver.Groups}"
                 SelectedItem="{Binding Path=PriceRoutine.KeyValueDriver.SelectedGroup}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Width="125"
                               Foreground="{StaticResource Foreground}"
                               Style="{StaticResource ListItemTextStyle}"
                               Text="{Binding Path=ValueDriverGroupId}"
                               TextAlignment="Center" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock Grid.Row="0"
                   Grid.Column="2"
                   Margin="10,5"
                   Style="{StaticResource ListTitleTextStyle}"
                   Text="{Binding ElementName=lstKeyGroups,
                                  Path=SelectedItem.ValueDriverGroupId,
                                  StringFormat=Group {0} - Optimization Rules}" />

        <DataGrid x:Name="dgOptimizationRules"
                  Grid.Row="1"
                  Grid.Column="2"
                  Margin="10,5"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding ElementName=lstKeyGroups,
                                        Path=SelectedItem.OptimizationRules}"
                  SelectedIndex="0">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Id}"
                                    Header="Id"
                                    IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Path=DollarRangeLower}" Header="Min $ Value" />
                <DataGridTextColumn Binding="{Binding Path=DollarRangeUpper}" Header="Max $ Value" />
                <DataGridTextColumn Binding="{Binding Path=PercentChange}" Header=" Opt %" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="0"
                   Grid.Column="3"
                   Margin="10,5"
                   Style="{StaticResource ListTitleTextStyle}"
                   Text="{Binding ElementName=lstKeyGroups,
                                  Path=SelectedItem.ValueDriverGroupId,
                                  StringFormat=Group {0} - Markup Rules}" />

        <DataGrid x:Name="dgMarkupRules"
                  Grid.Row="1"
                  Grid.Column="3"
                  Margin="10,5"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding ElementName=lstKeyGroups,
                                        Path=SelectedItem.MarkupRules}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Id}"
                                    Header="Id"
                                    IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Path=DollarRangeLower}" Header="$ Lower" />
                <DataGridTextColumn Binding="{Binding Path=DollarRangeUpper}" Header="$ Upper" />
                <DataGridTextColumn Binding="{Binding Path=PercentLimitLower}" Header="% Lower" />
                <DataGridTextColumn Binding="{Binding Path=PercentLimitUpper}" Header="% Upper" />
            </DataGrid.Columns>
        </DataGrid>

        <Separator Grid.Row="2" Grid.ColumnSpan="5" />

        <TextBlock Grid.Row="3"
                   Grid.Column="0"
                   Style="{StaticResource ListTitleTextStyle}"
                   Text="{Binding Path=PriceRoutine.LinkedValueDrivers.Count,
                                  StringFormat=Influencer Drivers ({0} selected)}" />

        <ListBox x:Name="lstNonKeyDrivers"
                 Grid.Row="4"
                 Grid.Column="0"
                 ItemsSource="{Binding Path=PriceRoutine.NonKeyValueDriversCache}"
                 SelectedIndex="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel MinHeight="35" LastChildFill="True">
                        <CheckBox Margin="5"
                                  DockPanel.Dock="Left"
                                  IsChecked="{Binding Path=IsSelected}"
                                  ToolTip="Check to include this value driver as an Influencer." />

                        <TextBlock x:Name="txtName"
                                   Style="{StaticResource ListItemTextStyle}"
                                   Text="{Binding Path=Name}" />
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!--
            <TextBlock Grid.Row="3"
            Grid.Column="1"
            Style="{StaticResource ListTitleTextStyle}"
            Text="{Binding Path=PriceRoutine.LinkedValueDrivers.Count,
            StringFormat=Influencer Drivers ({0})}"
            Visibility="{Binding ElementName=lstLinkedDrivers,
            Path=HasItems,
            Converter={StaticResource BooleanToVisibilityConverter}}" />
            
            <ListBox x:Name="lstLinkedDrivers"
            Grid.Row="4"
            Grid.Column="1"
            ItemsSource="{Binding Path=PriceRoutine.LinkedValueDrivers}"
            SelectedIndex="0">
            <ListBox.ItemTemplate>
            <DataTemplate>
            <StackPanel MinHeight="35" Orientation="Horizontal">
            <TextBlock x:Name="txtName"
            Style="{StaticResource ListItemTextStyle}"
