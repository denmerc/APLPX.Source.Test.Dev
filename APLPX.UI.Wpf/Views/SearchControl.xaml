<UserControl x:Class="APLPX.UI.WPF.SearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:views="clr-namespace:APLPX.UI.WPF.Views"
             xmlns:vm="clr-namespace:APLPX.UI.WPF.ViewModels"
             x:Name="UserControl"
             d:DesignHeight="1126"
             d:DesignWidth="951"
             mc:Ignorable="d">


    <Grid x:Name="LayoutRoot" Background="{DynamicResource MainWindowBackground}">
        <!--
            <Grid.Background>
            <ImageBrush ImageSource="/APLPX.UI.WPF;component/Resources/bodyBackground.jpg"
            Stretch="UniformToFill"/>
            </Grid.Background>
        -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <views:SearchGroupSelector x:Name="ucSearchGroupSelector" Grid.Column="0" />

        <StackPanel x:Name="DetailStackPanel"
                    Grid.Column="1"
                    Margin="15,0,0,0"
                    HorizontalAlignment="Left"
                    Visibility="{Binding IsDetailDisplayed,
                                         Converter={StaticResource BooleanToVisibilityConverter}}">
            <Label Width="500"
                   Margin="5,30,0,15"
                   Style="{StaticResource SearchControlTitleLabelStyle}">
                <Label.Content>
                    <AccessText Text="{Binding Path=SelectedFeature.SelectedEntity.Identity.Name, StringFormat='Details: {0}'}" TextTrimming="CharacterEllipsis" />
                </Label.Content>
            </Label>

            <Border Width="500"
                    Margin="0,5,0,0"
                    BorderBrush="#828790"
                    BorderThickness="1"
                    CornerRadius="5"            
                    Background="{DynamicResource SearchControlSelectedItemDetailBackgroundColor}" >

                <Grid x:Name="SelectedItemDetailGrid"
                      Margin="10,5"
                      DataContext="{Binding Path=SelectedFeature.SelectedEntity}">
                    <Grid.Resources>
                        <Style BasedOn="{StaticResource SearchControlSelectedItemDetailStyle}" TargetType="{x:Type TextBlock}" />
                    </Grid.Resources>


                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="Name:" />
                    <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               Text="{Binding Path=Identity.Name}" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="Description:" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               Text="{Binding Path=Identity.Description}" />
                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Text="Notes:" />
                    <TextBlock Grid.Row="2"
                               Grid.Column="1"
                               Text="{Binding Path=Identity.Notes}" />
                    <TextBlock Grid.Row="3"
                               Grid.Column="0"
                               Text="Created:" />
                    <TextBlock Grid.Row="3"
                               Grid.Column="1"
                               Text="{Binding Path=Identity.Created}" />
                    <TextBlock Grid.Row="4"
                               Grid.Column="0"
                               Text="Last Edited:" />
                    <TextBlock Grid.Row="4"
                               Grid.Column="1"
                               Text="{Binding Path=Identity.Edited}" />

                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
